{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleDetection": "force",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@lfginc/gala-api": ["chain-api/src/index.ts"],
      "@lfginc/gala-chaincode": ["chaincode/src/index.ts"],
      "@lfginc/gala-cli": ["chain-cli/src/index.ts"],
      "@lfginc/gala-client": ["chain-client/src/index.ts"],
      "@lfginc/gala-connect": ["chain-connect/src/index.ts"],
      "@lfginc/gala-test": ["chain-test/src/index.ts"],
      "@lfginc/gala-uikit": ["chain-ui/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": [
    "chain-cli/**/*.ts",
    "chain-api/**/*.ts",
    "chain-client/**/*.ts",
    "chaincode/**/*.ts",
    "chain-test/**/*.ts",
    "chain-connect/**/*.ts",
    "chain-ui/**/*.ts",
    "chain-react/**/*.ts",
    "chain-react/**/*.tsx",
    "package.json",
    "chain-client/src/ops-api-config-schema.json"
  ]
}
